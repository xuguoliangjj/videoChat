<%- include admin/header%>

<div class="container">

    <form role="form" method="post" action="/upload">
        <div class="form-group">
            <label for="exampleInputEmail1">电影名</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="输入电影名字">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">电影简述</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="简述这部电影">
        </div>
        <div class="form-group">
            <label for="exampleInputFile">电影文件</label>
            <input id="lefile" type="file" style="display:none">
            <div class="input-append">
                <input id="photoCover" class="form-control" type="text" style="width: 80%">
                <a class="btn btn-success" onclick="$('input[id=lefile]').click();">Browse</a>
            </div>

            <script type="text/javascript">
                $('input[id=lefile]').change(function() {
                    $('#photoCover').val($(this).val());
                });
            </script>
        </div>
        <button type="submit" class="btn btn-default">上传</button>
    </form>

</div>
<%- include footer%>